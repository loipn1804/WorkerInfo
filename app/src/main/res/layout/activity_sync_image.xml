<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:gravity="center"
            android:text="0/0"
            android:textColor="@color/black_txt_33"
            android:textSize="@dimen/txt_26sp" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="@dimen/dm_50dp"
            android:layout_height="@dimen/dm_50dp"
            android:layout_marginTop="@dimen/dm_10dp"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtStart"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_black"
                android:gravity="center"
                android:text="Start"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_22sp" />

            <TextView
                android:id="@+id/txtStop"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dm_20dp"
                android:background="@drawable/btn_black"
                android:gravity="center"
                android:text="Stop"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_22sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
